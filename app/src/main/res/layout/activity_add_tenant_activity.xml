<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OwnersHeatsink.addOwners_activity"
    android:background="#ffffff">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="6dp"
        android:theme="@style/ThemeOverlay.AppCompat.Light">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarAddTenant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:elevation="6dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/homeAddTenant"
                    android:layout_width="30dp"
                    android:layout_height="30dp"

                    android:layout_marginRight="10dp"
                    android:clickable="true"

                    android:src="@drawable/ic_baseline_home_24" />

                <TextView
                    android:id="@+id/Title_add_Owners"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="Add Tenant"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    />


                <ImageView
                    android:id="@+id/settingAddTenant"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginRight="10dp"
                    android:clickable="true"
                    android:padding="2dp"

                    android:src="@drawable/ic_baseline_settings_24" />

            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>


    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/appbar">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appbar"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:background="#ffffff"
        >

        <EditText
            android:id="@+id/getNameAddTenant"
            android:background="@drawable/edit_textbg"
            android:layout_width="300dp"
            android:layout_height="56dp"
            android:elevation="0.5dp"
            android:foreground="#000000"
            android:textSize="14dp"
            android:layout_gravity="center"
            android:hint="Tenant Name"
            android:inputType="text"
            android:layout_marginBottom="20dp"
            android:gravity="center"/>



        <EditText
            android:id="@+id/getPhoneAddTenant"
            android:layout_width="300dp"
            android:background="@drawable/edit_textbg"
            android:layout_height="56dp"
            android:elevation="0.5dp"
            android:textSize="14dp"
            android:hint="Mobile (+91 12345 12345 )"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:inputType="phone" />

        <EditText
            android:id="@+id/getEmailAddTenant"
            android:layout_width="300dp"
            android:background="@drawable/edit_textbg"
            android:layout_height="56dp"
            android:elevation="0.5dp"
            android:textSize="14dp"
            android:hint="heatSink@gmail.com"

            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:inputType="textEmailAddress" />

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/edit_textbg"
            android:orientation="horizontal"
            android:elevation="0.5dp"
            android:gravity="center"
            android:layout_marginBottom="20dp">

        <Spinner
            android:id="@+id/getPropertyAddTenant"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:theme="@style/submitspinner"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_gravity="center"
          />

        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:background="@drawable/edit_textbg"
            android:orientation="horizontal"
            android:elevation="0.5dp"
            android:gravity="center"
            android:layout_marginBottom="20dp">
            <Spinner
                android:id="@+id/idName"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:theme="@style/submitspinner"

                android:padding="10dp"
                android:transitionName="14dp"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_gravity="center"
                />
        </LinearLayout>
        <EditText
            android:id="@+id/getIdProofAddTenant"
            android:shadowColor="#000000"
            android:layout_width="300dp"
            android:layout_height="56dp"
            android:background="@drawable/edit_textbg"
            android:hint="Id Proof Number"
            android:elevation="0.5dp"
            android:textSize="14dp"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center"
            android:inputType="textPhonetic" />

        <EditText
            android:id="@+id/getRent"
            android:shadowColor="#000000"
            android:layout_width="300dp"
            android:layout_height="56dp"
            android:background="@drawable/edit_textbg"
            android:hint="Enter Tenant Rent (â‚¹)"
            android:elevation="0.5dp"
            android:textSize="14dp"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center"
            android:inputType="phone" />






        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="100dp"
            android:gravity="center">
            <Button
                android:id="@+id/cancelAddTenant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="20dp"
                android:layout_marginRight="40dp"

                android:text="cancel"
                android:textStyle="bold"
                android:textSize="12dp"
                android:background="@drawable/button_bg"
                android:elevation="4dp"

                />


            <Button
                android:id="@+id/saveAddTenant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"

                android:text="SAVe"
                android:textStyle="bold"
                android:textSize="12dp"
                android:background="@drawable/button_bg"
                android:elevation="4dp"

                />

        </LinearLayout>





    </LinearLayout>
    </ScrollView>

</RelativeLayout>